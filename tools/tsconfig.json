{
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../",
    "baseUrl": "../",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "buildOptions": {
    "incremental": true,
  },
  "include": [
    "**/*.ts"
  ],
}
