{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "outDir": "../../dist/electron"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
